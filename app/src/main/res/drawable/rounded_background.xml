<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:right="6dp" android:left="6dp" android:top="6dp" android:bottom="6dp">
        <shape>
            <solid android:color="#66000000"/> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="16dp"/>  <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Content Layer (Background Color #D4BEE4) -->
    <item>
        <shape>
            <solid android:color="#D4BEE4"/> <!-- Background color -->
            <corners android:radius="16dp"/>  <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
