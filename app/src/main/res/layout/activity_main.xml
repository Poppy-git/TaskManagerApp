<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bgColor"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Manager"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp" />

    <!-- Button for Today's Tasks -->
    <LinearLayout
        android:id="@+id/btnTodaysTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:paddingBottom="35dp"
        android:paddingTop="35dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Today's Tasks"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/ic_calendar_today"
                android:contentDescription="Today's Tasks Icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organize Notes..."
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="0dp" />
    </LinearLayout>

    <!-- Button for Weekly Tasks -->
    <LinearLayout
        android:id="@+id/btnWeeklyTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:paddingBottom="35dp"
        android:paddingTop="35dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Weekly Tasks"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/ic_calendar_week"
                android:contentDescription="Weekly Tasks Icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organize Notes..."
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Button for Monthly Tasks -->
    <LinearLayout
        android:id="@+id/btnMonthlyTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_button"
        android:paddingBottom="35dp"
        android:paddingTop="35dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Monthly Tasks"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:src="@drawable/ic_calendar_month"
                android:contentDescription="Monthly Tasks Icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organize Notes..."
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>